{
    "name": "mohammadv184/laravel-cart",
    "description": "A Cart for Laravel Framework",
    "keywords": ["laravel", "shopping cart", "cart"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Abbasi",
            "email": "mohammad.v184@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "illuminate/support": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0",
        "illuminate/database": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Mohammadv184\\Cart\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mohammadv184\\Cart\\CartServiceProvider"
            ],
            "aliases": {
                "Cart": "Mohammadv184\\Cart\\Facades\\Cart"
            }
        }
    },
    "scripts": {
        "phpcs": "phpcs src --standard=PSR2",
        "phpcbf": "phpcbf src --standard=PSR2"
    }
}
